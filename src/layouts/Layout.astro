---
// src/layouts/Layout.astro
import '../styles/style.css'; // Stil dosyamızı import ediyoruz

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>
</head>
<body>
    <div class="cursor-dot"></div>
    <div class="cursor-outline"></div>

    <div id="scroll-progress-bar"></div>
    <div id="particles-js"></div>

    <header>
        <div class="logo">[A.S.]</div>
        <nav>
            <a href="/#about">Hakkımda</a>
            <a href="/#skills">Yetenekler</a>
            <a href="/#portfolio">Portfolyo</a>
            <a href="/#contact">İletişim</a>
            <a href="/blog">Blog</a>
            <a href="/ozgecmis.pdf" class="cv-button" download="Adiniz_Soyadiniz_CV.pdf">CV İndir <i class="fas fa-download"></i></a>
        </nav>
        <div class="theme-switch-wrapper">
             <i class="fas fa-sun"></i>
            <label class="theme-switch">
                <input type="checkbox" id="theme-toggle">
                <span class="slider round"></span>
            </label>
            <i class="fas fa-moon"></i>
        </div>
    </header>

    <slot />

   </footer>

<div id="lightbox">
    <div class="lightbox-content">
        <button id="close-lightbox" class="close-lightbox" aria-label="Kapat"><i class="fas fa-times"></i></button>
        <img id="lightbox-img" src="" alt="Proje Detay Resmi">
        <h2 id="lightbox-title"></h2>
        <p id="lightbox-description"></p>
        <div class="lightbox-links">
            <a id="lightbox-link-demo" href="#" target="_blank" class="contact-button"><i class="fas fa-globe"></i> Canlı Demo</a>
            <a id="lightbox-link-code" href="#" target="_blank" class="contact-button secondary"><i class="fab fa-github"></i> Kodu İncele</a>
        </div>
    </div>
</div>

</body>
    <div id="lightbox">
        </div>

    <script src="/src/scripts/script.js"></script>
</body> </body>
</html>